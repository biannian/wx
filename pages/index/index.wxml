<view class="page" data-weui-theme="{{theme}}">
  <view class="page__bd">
    <view style="background-color:#409EFF" class="weui-search-bar">
      <form class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <input type="text" class="weui-search-bar__input" />
        </view>
        <label class="weui-search-bar__label" bindtap="toSearch">
          <i class="weui-icon-search"></i>
          <span class="weui-search-bar__text">搜索店铺</span>
        </label>
      </form>
    </view>
  </view>

   <view class="weui-grids" style="margin-top:10px">
    <a class="weui-grid" wx:key="id" wx:for="4" style="padding: 10rpx;width:25%">
      <navigator url="/pages/shops/shops">
      <view>
        <image class="img" src="/images/food.jpg">
        </image>
      </view>
      <view class="weui-grid__label">美食</view>
      </navigator>
    </a>
    <a class="weui-grid" style="padding:10rpx;width:25%">
      <view>
        <image  class="img" src="/images/naicha.jpg">
        </image>
        <!-- <image style="width:100%;height:100%" src="/images/naicha.jpg" alt></image> -->
      </view>
      <view class="weui-grid__label">奶茶</view>
    </a>
    <a class="weui-grid" style="padding: 10rpx;width:25%">
      <view>
        <image  class="img" src="/images/dagao.jpg">
        </image>
        <!-- <image style="width:100%;height:100%" src="/images/dagao.jpg" alt></image> -->
      </view>
      <view class="weui-grid__label">甜品</view>
    </a>
    <a class="weui-grid" style="padding: 10rpx;width:25%">
      <view>
        <image  class="img" src="/images/shuiguo.jpg">
        </image>
        <!-- <image style="width:100%;height:100%" src="/images/shuiguo.jpg"></image> -->
      </view>
      <view class="weui-grid__label">水果</view>
    </a>
    <a class="weui-grid" style="padding: 10rpx;width:25%">
      <image class="img" src="/images/shuiguo.jpg">
      </image>
      <view class="weui-grid__label">水果</view>
    </a>
    <a class="weui-grid" style="padding: 10rpx;width:25%">
      <image  class="img" src="/images/shuiguo.jpg">
      </image>
      <view class="weui-grid__label">水果</view>
    </a>
    <a class="weui-grid" style="padding: 10rpx;width:25%">
      <image  class="img" src="/images/shuiguo.jpg">
      </image>
      <view class="weui-grid__label">水果</view>
    </a>
    <a class="weui-grid" style="padding: 10rpx; width:25%">
      <view>
        <image  class="img" src="/images/shuiguo.jpg">
        </image>
        <!-- <image src="/images/shuiguo.jpg" alt></image> -->
      </view>
      <view class="weui-grid__label">水果</view>
    </a>
  </view>
  <view style="margin-top:10px;margin-left:10px;margin-right:10px">
    <swiper indicator-dots="true" autoplay="true" interval="2000" duration="500">
      <block wx:for="123" wx:key="*this">
        <swiper-item>
          <image style="width:100%;height:100%;border-radius: 10rpx;" src="/images/ashuiLong.png"></image>
          <view class="swiper-item {{item}}"></view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view style="margin-top:10px" class="weui-panel__bd" wx:for="{{shops}}" wx:key="index" wx:for-item="shop">
    <navigator url="/pages/commodity/commodity">
    <a class="weui-media-box weui-media-box_appmsg"> 
      <view class="weui-media-box__hd">
        <image style="height:90px;width:90px;margin-top:-15px;border-radius: 10rpx;" src="{{shop.shopImg}}"></image>
      </view>
   
      <view class="weui-media-box__bd">
        <h4 style="font-size:20px;margin-left:30px">{{shop.shopName}}</h4>
        <view class="weui-media-box__desc">
          <p style="font-size:16px;color:red;margin-left:30px">{{shop.shopScore}}分</p>
          <p style="margin-left:20px">销量:{{shop.shopSalesVolume}}</p>
        </view>
        <view class="weui-media-box__desc">
          <p style="margin-left:30px">起送:{{shop.shopStartPrice}}￥</p>
          <p style="margin-left:10px"> 配送:{{shop.shopSendPrice}}￥</p>
        </view>
      </view>
    </a>
    </navigator>
  </view>

</view>